<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team_ten.wavemusic">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.SinglePlaylistActivity"></activity>
        <activity android:name=".presentation.SelectSongsActivity" />
        <activity android:name=".presentation.ListOfPlaylistsActivity" />
        <activity android:name=".presentation.SearchActivity" />
        <activity android:name=".presentation.ListActivity" />
        <activity
            android:name=".presentation.NowPlayingMusicActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".presentation.MainMusicActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>