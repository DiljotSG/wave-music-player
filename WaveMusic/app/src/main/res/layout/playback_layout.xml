<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorButtonBgLight"
    app:layout_constraintBottom_toBottomOf="parent">

    <Button
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/skip"
        app:layout_constraintLeft_toRightOf="@id/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        app:layout_constraintLeft_toRightOf="@id/pause_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause"
        app:layout_constraintRight_toLeftOf="@id/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintRight_toLeftOf="@id/pause_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/skip_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_back"
        app:layout_constraintRight_toLeftOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>